<%- include('../partials/header.ejs')%>
<link rel="stylesheet" type="text/css" href="/css/bookahall.css" />
<main>
    <form action="/events" method="post">
        <label for="halltype">HallType
        <input type="text" id="halltype" name="halltype" required><br><br></label>
        <label for="name">Title
        <input type="text" id="title" name="title" required><br><br></label>
        <label for="name">Host Name
        <input type="text" id="name" name="name" required><br><br></label>
        <label for="Details">Details
        <textarea id="details" name="details" rows="3" cols="10" required minlength="10"></textarea><br><br></label>
        <label for="date">When
        <input type="date" id="date" name="date" required><br><br></label>
        <label for="location">Where
        <input type="text" id="location" name="location" required><br><br></label>
        <label for="starttime">Start
        <input type="time" id="starttime" name="starttime" required><br><br></label>
        <label for="endtime">End
        <input type="time" id="endtime" name="endtime" required><br><br></label>
        <label for="imageUrl">Image URL:</label>
        <input type="url" id="imageUrl" name="imageURL"  required><br><br>
        <button type="submit" >Submit</button>
    </form>
</main>

